{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug pytest - Current File",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-q",
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debug pytest - Tests Folder",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-q",
        "module3/tests"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}